{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "@typescript-eslint"
  ],
  "rules": {
    "eol-last": 2,
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/comma-dangle": "off",
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "always"
      }
    ]
  },
  "settings": {
    "import/parser" : {
      "@typescript-eslint/parser" : [".ts"]
    },
    "import/resolver" : {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}
